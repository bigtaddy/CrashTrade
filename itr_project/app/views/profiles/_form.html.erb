<%= form_for @profile, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label t(:name) %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label t(:city) %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label t(:language) %><br />
    <%= f.text_field :language%>
  </div>

  <div class="field">
    <%= f.label t(:about) %><br />  
    <%= f.text_area :about , class: "field1" %>
  </div>
  <div>
 <%= f.file_field :avatar %>
  </div> <br>
  <div class="actions">
    <%= f.submit t(:update_profile) %>
  </div>
<% end %>
